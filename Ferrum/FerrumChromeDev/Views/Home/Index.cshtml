@helper Truncate(string input, int length)
{
    var Text=input;
    if(input !=null)
    { 
    if(input.Length <= length)
    {
        @input
    }
    else
    {
        @input.Substring(0, length)<text><a href="#" style="color:blue" onclick="ReadMore('@Text')">..Read More</a> </text>
 
}}
}


