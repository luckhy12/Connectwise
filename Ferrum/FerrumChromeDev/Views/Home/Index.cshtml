                                        function AddActivity() {

                                            var phone = $("#phoneNoLabel").text();
                                            var ID = '@Model.CompanyID';
                                            window.location.href = "/Home/AddActivity?Phone=" + phone + "&ID=" + ID;
                                        }
                                        function CreateTicket(PhoneNo) {
                                            $.ajax(
                                                {
                                                    url: '@Url.Action("CheckTicket", "ServiceTicket")',
                                                    data: { Mobile: PhoneNo },
                                                    method: "POST",
                                                    type: "JSON",
                                                    success: function (data) {
                                                        if (data.length == 0) {
                                                            $("#myModal").modal('show');
                                                        }
                                                        else {
                                                            $("#myNewModal").modal('show');
                                                        }

                                                    }
                                                });
                                        }

                                        function ReadMore(text)
                                        {
                                            $("#myTextModal").modal('show');
                                            $("#NoteText").html('');
                                            $("#NoteText").text(text);
                                        }
                                        $(document).ready(function () {
                                            $('[data-toggle=collapse-side]').click(function (e) {
