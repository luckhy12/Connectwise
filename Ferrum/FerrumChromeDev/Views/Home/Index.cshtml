@model FerrumChromeDev.Models.ContactModel
@{
    ViewBag.Title = "Home Page";
    Layout = null;
}
    
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css">
    <script src="~/Scripts/bootstrap.js"></script>

          @if (Model.FirstName != null)
          {
              <div class="container" style="height:200px;width:400px">
                  <div class="row">
                      <label style="margin-top:10px;margin-bottom:0px">OUTGOING CALL </label>
                      <hr />
                  </div>
                  <br />
                  <div class="row">
                      <div class="col-md-12">
                          <div class="row">
                              <div class="col-md-2 col-xs-2">
                                  <div class="row">
                                      <span class="fa fa-phone-square fa-4x" />
                                  </div>
                                  <div class="row">&nbsp;</div>

                              </div>
                              <div class="col-md-5 col-xs-5" style="margin-left:5px">
                                  <div class="row">
                                      <span style="color:#CCDEE2">@Model.FirstName @Model.LastName</span>
                                  </div>
                                  <div class="row">
                                      <label style="color:lightgray">Callinize-Support</label>
                                  </div>
                                  <div class="row">
                                      <label style="color:darkblue">@Model.Phone</label>
                                  </div>
                                  <div class="row">
                                      <button type="button" class="btn btn-primary">Lead</button>
                                  </div>

                              </div>

                              <div class="pull-right col-md-4 col-xs-4">
                                  <div class="row text-center" style="background-color:#DFEFFF;border-radius:15px">
                                      <label>00:00:06</label>
                                      <span>hour:min:sec</span>
                                  </div>
                                  <div class="row">&nbsp;</div>
                                  <div class="row">
                                      <a style="color:black;font-size:10px">Email Templates<span class="caret" /></a>
                                      <span style="color:#1979CA" class="pull-right"><i class="fa fa-envelope" aria-hidden="true"></i> </span>
                                  </div>
                              </div>
                          </div>

                      </div>

                      <div class="row">
                          <hr style="border-top: dotted 1px;" />
                          <div class="col-md-12">
                              <div class="col-md-1 col-xs-1">
                                  <span style="color:darkgray"><i class="fa fa-angle-left fa-2x" aria-hidden="true"></i></span>
                              </div>
                              <div class="col-md-8 col-xs-8">
                                  <div class="row">
                                      <label style="color:lightgray">Called by Julie 2 day ago</label>
                                  </div>
                                  <div class="row">
                                      <label>- Auto Created by Callinze</label>
                                  </div>
                              </div>
                              <div class="pull-right col-md-2 col-xs-2">
                                  <span style="color:darkblue"><i class="fa fa-angle-right fa-2x" aria-hidden="true"></i></span>
                              </div>
                          </div>
                      </div>
                      <br />
                      <div class="row" style="background-color:#DFEFFF">
                          <div class="col-md-12">
                              <div class="col-md-9 col-xs-9" style="margin-top:6px;margin-bottom:6px">
                                  @Html.ActionLink("Click here to add activity", "AddActivity", "Home", null, new { @class = "btn btn-primary" })
                              </div>
                              <div class="col-md-3 col-xs-3" style="margin-top:6px">
                                  <button type="submit" class="btn btn-primary">SAVE</button>
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
          }
          else
          {

            <div class="container" style="height:400px;width:400px">
                
                <div class="row">
                    <label style="margin-top:10px;margin-bottom:0px">Incoming CALL </label>
                    <hr />
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-2">
                            <div class="row">
                                <span class="fa fa-phone-square fa-4x" />
                            </div>
                            <div class="row">
                                <a href="@Url.Action("AddContact","Home",new {CallerID = Model.Phone })">Create</a>
                            </div>

                        </div>
                        <div class="col-md-6" style="margin-left:5px">
                            <div class="row">
                                <span style="color:#CCDEE2">No User</span>
                            </div>
                            <div class="row">
                                <label style="color:lightgray">Callinize-Support</label>
                            </div>


                        </div>
                        <div class="col-md-3">

                        </div>
                    </div>
                </div>
            </div>
          }

  



